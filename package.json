{
  "name": "jamiesyme.com",
  "version": "1.0.0",
  "main": "app.js",
  "author": "Jamie Syme <jamie.d.syme@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build-client": "babel client -d tmp --copy-files && browserify -t [ stringify --extensions [.toml] ] tmp/app.js -o build/bundle.js && rm -rf tmp",
    "build-server": "babel server -d build",
    "build": "yarn run build-client && yarn run build-server",
    "start": "(cd build && node app.js)"
  },
  "babel": {
    "presets": [
      "react",
      "es2015"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "browserify": "^13.1.1"
  },
  "dependencies": {
    "body-parser": "^1.17.1",
    "email-validator": "^1.0.7",
    "emailjs": "^1.0.8",
    "express": "^4.14.1",
    "jquery": "^3.1.1",
    "normalize.css": "^5.0.0",
    "radium": "^0.18.1",
    "react": "^15.4.1",
    "react-autosize-textarea": "^0.3.6",
    "react-dom": "^15.4.1",
    "react-scroll": "^1.4.7",
    "stringify": "^5.1.0",
    "toml": "^2.3.2",
    "underscore": "^1.8.3"
  }
}
